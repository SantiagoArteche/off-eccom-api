generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  firstName   String
  lastName    String
  password    String
  email       String  @unique
  age         Int
  isValidated Boolean @default(false)
  role        Role    @default(user)
}

model Products {
  id        String   @id @default(uuid())
  name      String   @unique
  category  String   @unique
  price     Float
  stock     Int
  lowStock  Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categoryToProducts Category @relation(fields: [category], references: [name])
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Products Products?
}

enum Role {
  user
  admin
}
